;1.5 ms delay
DELAY	MOVLW	h'00'
		MOVWF	COUNT1
		MOVLW	d'2'
		MOVWF	COUNT2
LOOP	INCFSZ	COUNT1,F
		GOTO	LOOP
		DECFSZ	COUNT2,F
		GOTO 	LOOP
		RETURN

;40 MS DELAY
DELAY2	MOVLW	h'00'
		MOVWF	COUNT1
		MOVLW	d'52'
		MOVWF	COUNT2
LOOP2	INCFSZ	COUNT1,F
		GOTO	LOOP2
		DECFSZ	COUNT2,F
		GOTO 	LOOP2
		RETURN

; ~ 196 msec delay
DELAY3	MOVLW	h'00'
		MOVWF	COUNT1
		MOVLW	d'255'
		MOVWF	COUNT2
LOOP3	INCFSZ	COUNT1,F
		GOTO	LOOP3
		DECFSZ	COUNT2,F
		GOTO 	LOOP3
		RETURN

; ~ 1.97 sec delay
DELAY4	MOVLW	h'00'
		MOVWF	COUNT1
		MOVLW	d'255'
		MOVWF	COUNT2
		MOVLW	d'10'
		MOVWF	COUNTER
LOOP4	INCFSZ	COUNT1,F
		GOTO	LOOP4
		DECFSZ	COUNT2,F
		GOTO 	LOOP4
		DECFSZ	COUNTER,F
		GOTO 	LOOP4
		RETURN

