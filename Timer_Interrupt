TMR0INT
		DECFSZ	COUNTER2,F
		GOTO	LEAVEINT2
		

		DECF	tempA1
		MOVLW	b'01000'
		CALL	LCD
		MOVLW	b'01101'
		CALL	LCD
		CALL	NUMBER
		MOVLW	d'155'
		MOVWF	COUNTER2
		;restoring old position after decrementing remaining time
		CALL	LOAD_UPPER_AC
		MOVF	AC,w
		MOVWF	PORTA
		CALL	ET
		DECFSZ	tempB1,F
		GOTO	LEAVEINT2

TIME_OVER
		
		CALL	PRINT_SCORE
		MOVF	MATCHES,w
		MOVWF	tempA1
		BSF		tempA1,4
		CALL	NUMBER
		CALL	DELAY4
		MOVLW	b'1000'
		MOVWF	SCENE
		CALL	BUZZ
		CALL	BUZZ
	
LEAVEINT2	BCF	INTCON,	T0IF
			RETFIE
